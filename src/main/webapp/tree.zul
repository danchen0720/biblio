<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c" ?>
<zk>
    <style>
    	.z-tree{
    		border : 3px solid #cfcfcf;
    		border-left : 0px;
    		border-right : 0px;
    		background-color : white;
    	}
    </style>
	<tree id="artTreeView" model="@load(fourmvm.tm)">
	    <treecols>
	        <treecol label="${c:l('tree_topic')}" hflex="5"/>
	         <treecol label="${c:l('tree_time')}" hflex="1"/>
		</treecols>
		<template name="model" var="art">
        	<treeitem onClick="@command('clickArtTitle',articleId=art.id)">
       			<treerow>
       				<treecell label="@load(art.title)"/>
       				<treecell label="@load(art.time) @converter('formatedDate', format='yyyy/MM/dd HH:mm')"/>
        		</treerow>
        	</treeitem>
   		</template>
	</tree>
</zk>